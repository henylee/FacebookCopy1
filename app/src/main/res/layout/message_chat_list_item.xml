<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mymessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:background="@drawable/opponent_message_time_radious_box"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#ffffff"
            android:layout_marginRight="-15dp"
            android:text="오후 1:19"/>

        <TextView
            android:id="@+id/myMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/my_message_round_box"
            android:textColor="#000000"
            android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opponentmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image_icon"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아빠"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/opponentMessaseTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/opponent_message_round_box"
                    android:textColor="#000000"
                    android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:background="@drawable/opponent_message_time_radious_box"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="-15dp"
                    android:text="오후 1:19"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>